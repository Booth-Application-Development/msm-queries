<h1> Director #<%= @the_director.id %> details


<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @the_director_id %>" class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
   <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= @the_director.bio %>
   </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://image.tmdb.org/t/p/w500/iG0Gs0i5yd6SG4tSFjlXi5ZnSX6.jpg" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
      <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>

<h2> Filmography </h2>
<tavle border="1">
<% @filmography.each do |a_film|%>
  <tr>
    <td> 
      <%= a_film.id %>
    </td>
    <td>
      <img src="http://robohash.org/<%= a_film.image %>">
    </td>
     <td> 
      <%= a_film.image %>
    </td>
     <td> 
      <%= a_film.title %>
    </td>
     <td> 
      <%= a_film.year %>
    </td>
     <td> 
      <%= a_film.director_id %>
    </td>
     <td> 
      <a href=""> Show details </a>
    </td>
  </tr>
